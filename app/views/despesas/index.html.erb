<h1>Listing despesas</h1>

<table>
  <tr>
    <th>Descricao</th>
    <th>Local</th>
    <th>Valor</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @despesas.each do |despesa| %>
  <tr>
    <td><%= despesa.descricao %></td>
    <td><%= despesa.local %></td>
    <td><%= despesa.valor %></td>
    <td><%= despesa.data %></td>
    <td><%= link_to 'Show', despesa %></td>
    <td><%= link_to 'Edit', edit_despesa_path(despesa) %></td>
    <td><%= link_to 'Destroy', despesa, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

