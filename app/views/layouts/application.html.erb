<!DOCTYPE html>
<html>
<head>
  <title>Controle de Despesas</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>

	<!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->    
	<%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
	<%= stylesheet_link_tag 'blueprint/print',  :media => 'print' %>
	<!--[if lt IE 8]><%= stylesheet_link_tag 'blueprint/ie' %><![endif]-->
	
  <%= csrf_meta_tag %>
</head>
<body>
	<div class="container">
		<div class="span-24" id="menu_superior">
			<% if user_signed_in? %>
				<div id="links_esquerda" class="span-8">
					<%= link_to "Home", :controller => "home", :action => "index" %>
					<%= link_to "Despesas", :controller => "despesas", :action => "index" %>
				</div>
				<div class="links_direita span-16 last">
					<div id="links_direita" class="texto_direita prepend-12 span-4 last">
						<%= link_to "Logout", destroy_user_session_path %>
					</div>
				</div>
			<% end %>
		</div>
		<div class="span-24 arredondado_superior" id="cabecalho">
			<h1 class="titulo">Controle de Despesas</h1>
		</div>
		<div id="conteudo_principal" class="span-24">
			<div class="conteudo arredondado_inferior">
				<% unless notice.nil? %><p class="notice"><%= notice %></p><% end %>
				<% unless alert.nil? %><p class="alert"><%= alert %></p><% end %>
				<%= yield %>
			</div>
		</div>
		<div id="rodape" class="span-24">
			<div class="rodape small">
				Desenvolvido pela Aninha e JP
			</div>			
		</div>
	</div>
</body>
</html>